#:kivy 1.8.0
<AccelerometerTest>:
    BoxLayout:
        orientation: 'vertical'
        padding: '20dp'

        Graph:
            size_hint_y: 0.8
            id: graph_plot
            xlabel:'Time'
            ylabel:'Value'
            y_grid_label: True
            x_grid_label: True
            padding: 5
            xmin:0
            xmax:100
            ymin:-15
            ymax:20

        BoxLayout:
            orientation: "horizontal"
            id: matplotlib_plot
            
        BoxLayout:
            size_hint_y: None
            height: '48dp'
            padding: '4dp'

            ToggleButton:
                id: toggle_button
                text: 'Start accelerometer'
                on_press: root.do_toggle()

            ToggleButton:
                id: toggle_button2
                text: 'Start Linear accelerometer'
                on_press: root.linaccel()
